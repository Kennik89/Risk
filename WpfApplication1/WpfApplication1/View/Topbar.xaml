<RibbonWindow x:Class="Topbar.Window" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:r="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
    Title="Window" Height="350" Width="525">
    <!--
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
    -->

    <Ribbon>
        <!-- Home -->
        <RibbonTab Header="Home" KeyTip="H">
            <RibbonGroup Header="Map">
                <RibbonButton SmallImageSource="/Images/New.png" Label="New" KeyTip="N" Command="{Binding NewCommand}"/>
                <RibbonButton SmallImageSource="/Images/Open.png" Label="Open" KeyTip="O" Command="{Binding OpenCommand}"/>
                <RibbonButton SmallImageSource="/Images/Save.png" Label="Save" KeyTip="S" Command="{Binding SaveCommand}"/>
            </RibbonGroup>
            <RibbonGroup Header="Game">
                <RibbonButton LargeImageSource="/Images/StartGame.png" Label="Start" KeyTip="P" Command="{Binding PlayGameCommand}"/>
                <!-- ISSUE -->
            </RibbonGroup>
        </RibbonTab>
        <!-- Editor -->
        <RibbonTab Header="Editor" KeyTip="E">
            <RibbonGroup Header="Copy/Paste">
                <RibbonButton SmallImageSource="/Images/Cut.png" Label="Cut" KeyTip="X" Command="{Binding CutCommand}"/>
                <RibbonButton SmallImageSource="/Images/Copy.png" Label="Copy" KeyTip="C" Command="{Binding CopyCommand}"/>
                <RibbonButton SmallImageSource="/Images/Paste.png" Label="Paste" KeyTip="V" Command="{Binding PasteCommand}">
                </RibbonButton>
            </RibbonGroup>
            <RibbonGroup Header="Elements" KeyTip="C">
                <RibbonButton SmallImageSource="/Images/addLand.png" Label="Country" KeyTip="Q" Command="{Binding addLandCommand}"/>
                <RibbonButton SmallImageSource="/Images/addLine.png" Label="Connection" KeyTip="W" Command="{Binding addLineCommand}"/>
                <RibbonButton SmallImageSource="/Images/Delete.png" Label="Delete" KeyTip="E" Command="{Binding DeleteCommand}"/>
            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
</RibbonWindow>