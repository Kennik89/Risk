<Page x:Class="Risk.View.SidePanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Risk.View"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      Title="SidePanel" Background="DimGray" Width="auto">

    <StackPanel Margin="3" HorizontalAlignment="Left">
        <Label Margin="3" HorizontalAlignment="Left">Teams</Label>
        <StackPanel Margin="3"  MaxWidth="200" MinWidth="100" HorizontalAlignment="Left" >
            <StackPanel.Background>
                <SolidColorBrush Color="Blue" Opacity="0.5"/>
            </StackPanel.Background>
            <Label Margin="3,3,3,0">Team Blue</Label>
            <Label Margin="15,0,15,15">Contry: 5</Label>
        </StackPanel>
        <StackPanel Margin="3"  MaxWidth="200" MinWidth="100" HorizontalAlignment="Left" >
            <StackPanel.Background>
                <SolidColorBrush Color="Red" Opacity="0.5"/>
            </StackPanel.Background>
            <Label Margin="3" >Team Red</Label>
            <Label Margin="15,0,15,15">Contry: 15</Label>
        </StackPanel>
    </StackPanel>
</Page>
